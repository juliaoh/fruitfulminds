- @subtitle = "Edit School"

%span
  = form_for @school_fields, :url => {:action => :update} do |f|
    = render :partial => "school", :locals => {:f => f}
    #submit
      = submit_tag 'Save Changes'


      = button_to 'Delete', schools_path(@school), :method => :delete, :confirm => "Are you sure you want to delete #{@school}?"
