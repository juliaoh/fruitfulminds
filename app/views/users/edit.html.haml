- @subtitle = "Edit User"
= form_tag user_path(@user), :method => :put do
  = label :user, :name, "Name: #{@user.name}"
  = label :user, :email, "Email: #{@user.email}"
  = label :college, :name, "College:"
  = select :college, :name, options_for_select(College.all.collect { |c| [c.name, c.id] }, @college.id)
  %br
  = submit_tag 'Update User Info'

= label :courses, :name, "Courses:"
%table
  - @user.courses.each do |course|
    %tr
      %td
        %li= course.name
      %td= button_to "Remove", remove_course_path({:user => @user, :course => course}), :confirm => "Are you sure you want to remove #{course.name}?"

= form_tag add_course_path({:user => @user}), :method => :put do
  %h4= "Add Course"
  = label_tag "School"
  = select_tag "school[#{@user.id}]", options_for_select(School.all.collect { |s| ["#{s.name}, #{s.city}, #{s.county}", s.id]}), :style => "width: 325px;"
  = label_tag "Semester"
  = select_tag "semester[#{@user.id}]", options_for_select(["Spring #{Time.now.year}", "Fall #{Time.now.year}", "Spring #{Time.now.year+1}", "Fall #{Time.now.year+1}"]), :style => "width: 125px;"
  = label_tag "Curriculum"
  = select_tag "curriculum[#{@user.id}]", options_for_select(Curriculum.all.collect { |curriculum| [curriculum.name, curriculum.id] }), :style => "width: 150px;"
  %br
  = submit_tag "Add"


= button_to 'Delete User', user_path({:user => @user}), :method => :delete, :confirm => "Are you sure you want to delete #{@user.name}?"
