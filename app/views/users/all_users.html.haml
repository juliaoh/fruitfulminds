- @subtitle = "All Users"
- @menu = "Users"

%h3
  = "Active Users"
%table#pending_users
  %thead
    %tr
      %th Name/Email
      %th College
      %th Active Courses
      %th Edit
  %tbody
    - @active_users.each do |user|
      %tr
        %td
          = user.name
          %br
            %em= user.email
        %td= user.college.name
        %td 
          - get_own_courses(user)
          - @active_courses.each do |course|
            %li= course.name
        %td= link_to 'Edit', edit_user_path(user.id)

