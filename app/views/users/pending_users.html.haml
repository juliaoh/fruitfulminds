- @subtitle = 'Pending Users'

= form_tag update_pending_users_path, :method => :post, :id => 'pending_users_form' do
  %table#pending_users
    %thead
      %tr
        %th Name
        %th Email
        %th College
        %th School Name
        %th School City
        %th School County
        %th School District
        %th Semester
        %th Year
        %th Approve
        %th Disapprove
    %tbody
      - @pending_users.each do |user|
        %tr
          %td= user[:name]
          %td= user[:email]
          %td= select_tag "colleges[#{user[:id]}]", options_for_select(College.all.collect { |s| ["#{s.name}", s.id ]}, :selected => user[:college_name]), :style => "wdith: 150px;"
          %td= select_tag "school_names[#{user[:id]}]", options_for_select(School.all.collect { |s| ["#{s.name}", s.name ] }, :selected => user[:school_name]), :style => "width: 150px;"
          %td= select_tag "school_cities[#{user[:id]}]", options_for_select(School.all.collect { |s| ["#{s.city}", s.city ] }, :selected => user[:school_city]), :style => "width: 150px;"
          %td= select_tag "school_counties[#{user[:id]}]", options_for_select(School.all.collect { |s| ["#{s.county}", s.county ] }, :selected => user[:school_county]), :style => "width: 150px;"
          %td= select_tag "school_districts[#{user[:id]}]", options_for_select(School.all.collect { |s| ["#{s.district}", s.district ] }, :selected => user[:school_district]), :style => "width: 150px;"
          %td= select_tag "semester_names[#{user[:id]}]", options_for_select(%w[Fall Winter Spring Summer], :selected => user[:semester_name]), :style => "width: 85px;"
          %td= select_year(user[:semester_year], :field_name => user[:id], :start_year => 2005, :end_year => Time.now.year + 5)
          %td= check_box_tag "approves[#{user[:id]}]", 1, false, :id => "approves_#{user[:id]}", :style => "width: 30px;"
          %td= check_box_tag "disapproves[#{user[:id]}]", 1, false, :id => "disapproves_#{user[:id]}", :style => "width: 30px;"
  = submit_tag 'Update', :id => 'update_submit', :style => "margin: 10px;"
