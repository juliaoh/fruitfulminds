- @subtitle = "Historical Report"
- @menu = "Reports"
- report_ids = @deltas.keys

:css
  table.report_data {
    border: 1px solid black;
  }
  table.report_data th {
    border: 1px solid black;
    padding-left: 5px;
    padding-right: 5px;
  }
  table.report_data td {
    border: 1px solid black;
    padding-left: 10px;
    padding-right: 10px;
    text-align:center;
  }

%table.report_data
  %tr
    %th School
    %th Semester
    %th Delta
    %th Actual Report
  -report_ids.each do |report_id|
    %tr
      %td
        =@schools[report_id]
      %td
        =@semesters[report_id]
      %td
        =@deltas[report_id]
      %td
        =link_to 'Link', @report_link[report_id]
