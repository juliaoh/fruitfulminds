- @subtitle = "Historical Report"
- @menu = "Reports"
- report_ids = @deltas.keys

:css
  table.report_data {
    border: 1px solid black;
  }
  table.report_data th {
    border: 1px solid black;
    padding-left: 5px;
    padding-right: 5px;
  }
  table.report_data td {
    vertical-align:top;
    border: 1px solid black;
    padding-left: 10px;
    padding-right: 10px;
    text-align:center;
  }

%table.report_data
  %tr
    %th School
    %th Semester
    %th Delta
    -if @show_efficacy
      %th Efficacy Strength
      %th Efficacy Weakness
      %th Efficacy Competency
    -if @show_mc
      %th Multiple Choice Strength
      %th Multiple Choice Weakness
      %th Multiple Choice Competency
    %th Actual Report
  -report_ids.each do |report_id|
    %tr
      %td
        =@schools[report_id]
      %td
        =@semesters[report_id]
      %td
        =@deltas[report_id]
      -if @show_efficacy
        %td
          =@efficacy_strength[report_id]
        %td
          =@efficacy_weakness[report_id]
        %td
          =@efficacy_competency[report_id]
      -if @show_mc
        %td
          =@strength[report_id]
        %td
          =@weakness[report_id]
        %td
          =@competency[report_id]
      %td
        =link_to 'Link', @report_links[report_id]
