- @subtitle = "Edit Post-Survey Results"

%span
  = form_tag("/postsurveys/#{params[:id]}", method: "put") do
    = label_tag "school_name", "#{@school_name}"
    = label_tag "absolute_total_students", "Total students"
    = text_field_tag "absolute_total_students", @absolute_total
    = label_tag "student_subtotal", "Student Subtotal"
    = text_field_tag "student_subtotal", "#{@student_subtotal}"
    - @curriculum.sections.each do |section|
      = label_tag section.id, "#{section.name}"
      - section.questions.each do |question|
        = label_tag question.id, "#{question.name}"
        = text_field_tag question.id, @postsurvey_data[question.id]
    %br
    = submit_tag 'Save Changes'
