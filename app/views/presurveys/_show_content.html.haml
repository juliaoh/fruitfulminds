%span
  %table
    %tr
      = label_tag "school_name", "#{@school_name}"
      = label_tag "absolute_total_students", "Total students"
      = text_field_tag "absolute_total_students", @absolute_total, :readonly => true
    %tr
      %th
      - @users.each do |user|
        %th= user.name
    %tr
      %td= "Student Subtotal"
      - @users.each do |user|
        %td= text_field_tag "#{user.id}_student_subtotal", @survey_total[user.id], :readonly => true
    - @curriculum.sections.each do |section|
      %tr
        %td= label_tag section.id, "#{section.name}"
      - section.questions.each do |question|
        %tr
          %td= label_tag question.id, "#{question.name}"
          - @users.each do |user|
            %td= text_field_tag "#{user.id}_#{question.id}", @survey_data[user.id][question.id], :readonly => true
