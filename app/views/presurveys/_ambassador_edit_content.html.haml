= label_tag "school_name", "#{@school_name}"
= label_tag "new_data[absolute_total_students]", "Total students"
= text_field_tag "new_data[absolute_total_students]", @absolute_total, class: "numeric_input_field"
= label_tag "new_data[#{@current_user.id}][student_subtotal]", "Student Subtotal"
= text_field_tag "new_data[#{@current_user.id}][student_subtotal]", @survey_total[@current_user.id], class: "numeric_input_field"
- @curriculum.sections.each do |section|
  = label_tag section.id, "#{section.name}"
  - section.questions.each do |question|
    = label_tag "new_data[#{@current_user.id}][#{question.id}]", question.name
    = text_field_tag "new_data[#{@current_user.id}][#{question.id}]", @survey_data[@current_user.id][question.id], class: "numeric_input_field"
%br
= submit_tag 'Save Changes'
