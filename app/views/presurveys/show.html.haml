- @subtitle = "Pre-Survey Results"

%span
  - @curriculum.sections.each do |section|
    = label_tag section.id, "#{section.name}"
    - section.questions.each do |question|
      = label_tag question.id, "#{question.name}"
      = text_field_tag question.id, @presurvey.data[question.id], :readonly => true

= button_to "Edit Presurvey", edit_presurvey_path(params[:id]), :method => :get, :id => params[:id]
